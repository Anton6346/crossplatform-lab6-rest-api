@model IEnumerable<Course>

<h2>Courses</h2>

<table class="table table-striped">
    <tr>
        <th>Title</th>
        <th>Category</th>
        <th>Teacher</th>
        <th>Start Date</th>
        <th></th>
    </tr>

    @foreach (var c in Model)
    {
        <tr>
            <td>@c.Title</td>
            <td>@c.Category.Name</td>
            <td>@c.Teacher.FullName</td>
            <td>@c.StartDate.ToShortDateString()</td>
            <td>
                <a asp-action="Details" asp-route-id="@c.Id">View</a>
            </td>
        </tr>
    }
</table>
