@model IEnumerable<Teacher>

<h2>Teachers</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Full Name</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.Id</td>
                <td>@teacher.FullName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@teacher.Id">
                        View
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
