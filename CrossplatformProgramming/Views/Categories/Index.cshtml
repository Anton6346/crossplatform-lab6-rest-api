@model IEnumerable<Category>

<h2>Categories</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th></th>
    </tr>

    @foreach (var c in Model)
    {
        <tr>
            <td>@c.Id</td>
            <td>@c.Name</td>
            <td>
                <a asp-action="Details" asp-route-id="@c.Id">View</a>
            </td>
        </tr>
    }
</table>
