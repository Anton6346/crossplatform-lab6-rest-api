<form asp-action="Index" method="get" class="mb-5 p-4 rounded shadow-sm border" style="background-color: #f8f9fa;">
    <div class="row g-3 align-items-end">
        <div class="col-md-3">
            <label class="form-label fw-bold text-secondary">Назва курсу</label>
            <input type="text" name="titleStart" class="form-control border-primary-subtle"
                   placeholder="Введіть назву..." value="@Context.Request.Query["titleStart"]" />
        </div>

        <div class="col-md-3">
            <label class="form-label fw-bold text-secondary">Дата початку з</label>
            <input type="date" name="fromDate" class="form-control border-primary-subtle"
                   value="@Context.Request.Query["fromDate"]" />
        </div>

        <div class="col-md-4">
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary px-4">
                    <i class="bi bi-search"></i> Знайти
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4">
                    Скинути
                </a>
            </div>
        </div>
    </div>
</form>